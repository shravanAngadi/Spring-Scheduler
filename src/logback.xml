<configuration>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d kk %X{requestId} %p \(%t\) [%c] - %m%n</pattern>
        </encoder>
    </appender>

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <File>/var/log/airwatch/test/rfs-web.log</File>
        <encoder>
            <pattern>%d kk %X{requestId} %p \(%t\) [%c] - %m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <maxIndex>40</maxIndex>
            <FileNamePattern>/var/log/airwatch/test/rfs-web.log.%i</FileNamePattern>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>25MB</MaxFileSize>
        </triggeringPolicy>
    </appender>

    <logger name="com.airwatch" level="debug"/>


    <root level="debug">
        <appender-ref ref="file"/>
    </root>

</configuration>

